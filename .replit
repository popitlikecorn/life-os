entrypoint = "main.py"
modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "libyaml"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["python3", "main.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Life OS Daily Routine"

[[workflows.workflow]]
name = "Life OS Daily Routine"
author = 43714996
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd life_os && python main.py"

[[workflows.workflow]]
name = "Test Life OS"
author = 43714996
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd life_os && python main.py"
